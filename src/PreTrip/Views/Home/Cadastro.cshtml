@model PreTrip.Model.Classes.Usuario

<div class="row col-md-8 wrapcenter" style="padding: 3em 0">
    <div class="col-md-4" style="padding: 5em 0">
        <h2>Organize sua Caravana</h2>
        <p>
            Sempre foi um sonho conhecer lugares diferentes? Por que não organizar sua própia caravana para reunir os amigos e conhecer pessoas novas!
        </p>

        <i class="material-icons" style="font-size: 10rem; vertical-align:middle; color: #808080">clear_all</i>
        <i class="material-icons" style="font-size: 13rem; vertical-align:middle; color: #0992cf">airport_shuttle</i>
    </div>

    <div class="col-md-8">
        @using (Html.BeginForm("Cadastrar", "Cadastro", FormMethod.Post))
        {
            //@Html.ValidationSummary(true);
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="material-icons" style="font-size: 16px">person</i>
                    </div>
                    @Html.EditorFor(x => x.Login, new { htmlAttributes = new { @class = "form-control", placeholder = "Usuário" } })
                </div>

                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="material-icons" style="font-size: 16px">lock</i>
                    </div>
                    @Html.PasswordFor(x => x.Senha, new { @class = "form-control", placeholder = "Senha" })
                </div>

                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="material-icons" style="font-size: 16px">face</i>
                    </div>
                    @Html.EditorFor(x => x.Pessoa.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome" } })
                </div>

                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="material-icons" style="font-size: 16px">contact_mail</i>
                    </div>
                    @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                </div>

                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="material-icons" style="font-size: 16px">local_phone</i>
                    </div>
                    @Html.EditorFor(x => x.Pessoa.Telefone, new { htmlAttributes = new { @class = "form-control", placeholder = "Telefone" } })
                </div>

                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="material-icons" style="font-size: 16px">subtitles</i>
                    </div>
                    @Html.EditorFor(x => x.Pessoa.Cpf, new { htmlAttributes = new { @class = "form-control", placeholder = "Cpf" } })
                </div>

                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="material-icons" style="font-size: 16px">date_range</i>
                    </div>
                    @Html.EditorFor(x => x.Pessoa.DtNascimento, new { htmlAttributes = new { @class = "form-control", placeholder = "Data", type = "date" } })
                </div>
            </div>

            <div class="pull-right">
                <button type="submit" class="btn btn-warning pull-right">Confirmar</button>
            </div>
        }
    </div>
</div>

<div class="row row-sep " style="background: #333;">
    <div class="wrapcenter col-md-7">
        <div class="col-md-12 text-center" style="color: #999; padding: 2em;">

            <h2 style="color: #fff;">Realizando Sonhos</h2>
            <p>
                Você pode organizar viagens para lugares fantásticos, onde você sempre sonhou em ir..
            </p>

            <div style="padding: 2em;">
                <i class="material-icons" style="font-size: 8rem; color: #1fbb01">nature_people</i>
            </div>

        </div>
    </div>
</div>

<div class="clearfix"></div>