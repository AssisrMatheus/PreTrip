@{
    ViewBag.Title = "PreTrip - Seu sonho no seu alcance!";
}
@using PreTrip.Session
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <!--Navbar-->
    @if (PreTripSession.Usuario != null)
    {
        @Html.Partial("~/Views/Shared/Navbar/_PartialUsuarioLogado.cshtml")
    }
    else
    {
        @Html.Partial("~/Views/Shared/Navbar/_PartialDefault.cshtml")
    }

    <div>
        <!--Content-->
        @RenderBody()
        <hr />
        <!--Footer-->
        <footer class="wrapcenter row col-md-9">
            <p>&copy; @DateTime.Now.Year - @ViewBag.Title   </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/bootstrap")

    <style>
        a:hover {
            cursor: pointer;
        }
    </style>

    <script>
        $(document).ready(function () {
            $('[datatoggle="tooltip"]').tooltip();
        });
    </script>

</body>
</html>
