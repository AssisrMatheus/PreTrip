@model PreTrip.Model.Classes.Cartao

<div class="container">
    <div class="panel panel-primary" style="margin-top: 2em;">
        <div class="panel-heading">
            <h3>Adicionar cartão</h3>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("AdicionarCartao", "Usuario", FormMethod.Post))
            {
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        Número do cartão
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NumeroCartao, new { htmlAttributes = new { @class = "form-control", placeholder = "Exatamente 16 números" } })
                            @Html.ValidationMessageFor(model => model.NumeroCartao, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        Código do cartão
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control", placeholder = "Exatamente 3 números" } })
                            @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        Data de validade
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DataValidade, new { htmlAttributes = new { @class = "form-control", placeholder = "Formato: aaaammm" } })
                            @Html.ValidationMessageFor(model => model.DataValidade, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Adicionar" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
