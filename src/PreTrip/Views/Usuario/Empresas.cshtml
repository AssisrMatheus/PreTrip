@{
    ViewBag.Title = "VisualizarEmpresas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Views/Shared/Usuario/_UsuarioBeforePartialView.cshtml")

<div class="pull-right">
    @Html.ActionLink("Cadastrar", "CadastrarEmpresa", "Usuario", new { @class = "btn btn-success" })
</div>

<table class="table table-hover" style="width:50%;margin:0 auto;">

    <h3 style="text-align:center;">Minhas Empresas Cadastradas</h3>

    <thead>
        <tr>
            <th>CNPJ</th>
            <th>Razao Social</th>
            <th>Nome Fantasia</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var empresa in (IEnumerable<PreTrip.Model.Classes.Empresa>)ViewBag.Empresas)
        {
            <tr>
                <td>@empresa.Cnpj</td>
                <td>@empresa.RazaoSocial</td>
                <td>@empresa.NomeFantasia</td>
                <td>
                    <a title="Adicionar Endereços">
                        <i style="font-size: 3rem;" class="material-icons pull-left">note_add</i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.Partial("~/Views/Shared/Usuario/_UsuarioAfterPartialView.cshtml")
